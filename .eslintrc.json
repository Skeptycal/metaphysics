{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "jasmine": true,
    "es6": true
  },
  "plugins": ["promise"],
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "camelcase": 0,
    "max-len": [2, 120],
    "quotes": [2, "double"],
    "semi": [0],
    "no-extra-semi": 0,
    "indent": 0,
    "promise/catch-or-return": 2,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "import/first": 0,
    "no-underscore-dangle": 0
  },
  "globals": {
    "expect": false,
    "schema": false,
    "sinon": false,
    "expectPromiseRejectionToMatch": false
  }
}
